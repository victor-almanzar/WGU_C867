{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: aarch64-linux-gnu-g++-11 build active file",
      "command": "/usr/bin/aarch64-linux-gnu-g++-11",
      "args": [
        "-std=c++20",
        "-fdiagnostics-color=always",
        "-g",
        // use -ggdb flag below if debugging
        "-ggdb",
        // use -O2 and -DNDEBUG flag below when releasing
        // "-O2",
        // "-DNDEBUG",
        "-pedantic-errors", // disable compiler extensions to adhere to C++ standards.
        // below are five extra warnings, useful for learning c++
        "-Wall",
        "-Weffc++",
        "-Wextra",
        "-Wconversion",
        "-Wsign-conversion",
        "-Werror", // treat warnings as errors
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
